  background-color: #e8670b;
  height: 70px;
}

.m_bbt {
  width: 100px;
  height: 50px;
  color: white;
}

.ls {
  margin-left: -1px;
  margin-top: 6px;
  width: 20px;
  height: 20px;
}

.place_top {
  font-size: 15px;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}

.place_bottom {
  font-family: 楷体;
  font-size: 24px;
  text-align: center;
  margin-left: 13px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 8px;
}
.classify{
  display: flex;
  flex-direction: row;
  width: 100%;
}
.select{
  font-size: 12px;
  color:#e8670b;
